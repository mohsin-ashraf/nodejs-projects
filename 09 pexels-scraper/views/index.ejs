<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>PSP | Pexels Stock Photos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" media="screen" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
</head>
<body class="bg-light" >

  <h1 class="text-center display-1">Pexels</h1>
  <h1 class="display-3 text-center mb-5">The Simplest</h1>

  <div class="container">
    <div class="row">
      <% images.forEach(image =>{ %>
        <div class="col-md-4">
            <div class="card card-body">
                <img src="<%= image%>" class="img-fluid" alt="">
                <a href="<%= image.split('?')[0]%>" class="btn btn-outline-danger mt-2" target="_blank">View Image</a>
            </div>
        </div>
      <%})%>
    </div>

    <!-- If there are no images -->
    <%if (images.length === 0) {%>
      <h1 class="display-1 text-center mb-5">Sorry, No Images</h1>
    <%}%>
  </div>

  <!-- Pagination -->
  <div class="container mt-5 mb-5">
    <h1 class="display-1 text-center">Pagination</h1>
    <div class="row">
     <%for (let i = 0 ; i < 250 ; i++){%>
        <a href="/<%=i+1%>" class="btn <%= (pageNumber == (i+1)) ? 'btn-primary' : '' %>"><%= i+1 %></a>
     <%}%>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>