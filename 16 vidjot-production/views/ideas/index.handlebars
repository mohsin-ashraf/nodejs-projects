<h1 class="display-1 text-center">Ideas</h1>


{{#each ideas}}

<div class="card card-body my-3">
  <div class="row">
    <div class="col-md-10">
      <h4>{{title}}</h4>
      <p class="lead"> {{details}} </p>
    </div>
    <div class="col-md-2">
      <a href="/ideas/edit/{{_id}}" class="btn btn-success">Edit</a>
      <a href="/ideas/delete/{{_id}}" class="btn btn-danger">Delete</a>
    </div>
  </div>
</div>

{{else}}

<p class="lead">No Video ideas listed yet.</p>

{{/each}}