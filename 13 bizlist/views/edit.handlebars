<div class="errors mt-3">
  {{#each errors}}
  <div class="alert alert-danger"> {{msg}} </div>
  {{/each}}
</div>
<h1 class="display-3 text-center">Add Business</h1>
<form method="POST" action="/business/edit/{{result._id}}">
  <div class="form-group">
    <label for="bname">Business Name </label>
    <input type="text" value="{{result.name}}" id="bname" name="bname" placeholder="Business Name" class="form-control">
  </div>

  <div class="form-group">
    <label for="category"></label>
    <select name="category" id="category" class="form-control">
      <option value="0" disabled selected>Select Category</option>
      <option value="Accounting">Accounting</option>
      <option value="Construction">Construction</option>
      <option value="Education">Education</option>
      <option value="Food">Food</option>
      <option value="Healthcare">Healtcare</option>
      <option value="Real Estate">Real Estate</option>
      <option value="Technology">Technology</option>
      <option value="Other">Other</option>
    </select>
  </div>

  <div class="form-group">
    <label for="website">Website</label>
    <input type="text" class="form-control" value="{{result.website}}" name="website" placeholder="Website" id="website">
  </div>

  <div class="form-group">
    <label for="phone">Phone</label>
    <input type="text" class="form-control" name="phone" value="{{result.phone}}" id="phone" placeholder="Phone Number">
  </div>

  <div class="form-group">
    <label for="street">Street Address</label>
    <input type="text" id="street" name="street" class="form-control" value="{{result.street}}" placeholder="Street Address">
  </div>

  <div class="form-group">
    <label for="city">City</label>
    <input type="text" id="city" name="city" placeholder="City" value="{{result.city}}" class="form-control">
  </div>

  <div class="form-group">
    <label for="state">State</label>
    <input type="text" placeholder="State" name="state" class="form-control" value="{{result.state}}" id="state">
  </div>

  <div class="form-group">
    <label for="zipcode">Zipcode</label>
    <input type="text" placeholder="Zipcode" name="zipcode" class="form-control" value="{{result.zip}}" id="zipcode">
  </div>

  <input type="submit" class="btn btn-primary btn-lg" value="Submit">

</form>